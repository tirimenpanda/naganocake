<div class="container">
	<% if not admin_user_signed_in? then %>

	<div class="row">
		<div  class="col-xs-1">
			<div id='genresShowing'>
				<button type="button" name="button" class='btn btn-primary'>ジャンル検索</button>
			</div>
			<div id="genre-window1">

				<%= render 'items/template_genres', genres: @genres %>
			</div>
		</div>

		<div class="col-xs-11">
			<%= render 'items/template_items', pages: @pages, counts: @counts, info: '商品' %>
		</div>
	<% else %>
	<%= render 'homes/orders_index_today' %>
	<% end %>
</div>
</div>

<script>
	$(function(){
		$('#genre-window1').hide();
	});
	$('#genresShowing').on('click',function() {
		$('#genre-window1').show();
	});
</script>
