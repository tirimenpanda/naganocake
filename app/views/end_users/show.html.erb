
<div class="container">
  <div class="row">
    <div class="page_title">
      <h3>マイページ</h3>
    </div>
    <h3><strong>登録情報</strong></h3>
    <div class="btn-wrapper">
      <%= link_to '編集する', edit_end_users_path, class:"btn btn-primary col-xs-2" %>
      <%= link_to 'パスワードを変更する', '/end_users/password/new' , class:"btn btn-primary col-xs-4" %>
    </div>

    <table class="table">
      <tr>
        <th>氏名</th>
        <td>
          <!--苗字-->
          <%= current_end_user.last_name %>
          <!--名前-->
          <%= current_end_user.first_name %>
        </td>
      </tr>
      <tr>
        <th>カナ</th>
        <td>
          <!--苗字-->
          <%= current_end_user.last_name_kana %>
          <!--名前-->
          <%= current_end_user.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= current_end_user.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= current_end_user.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= current_end_user.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= current_end_user.email %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <h3><strong>配送先</strong></h3>
    <!-- <div class="btn-wrapper"> -->
    <%= link_to '一覧を見る', addresses_path, class:"btn btn-primary col-xs-3" %>
  </div>
  <div class="row">
    <h3><strong>注文履歴</strong></h3>
    <%= link_to '一覧を見る', orders_path, class:"btn btn-primary col-xs-3" %>
  </div>
</div>
