<div class="container">
  <div class="row" text-align="center">
    <h4>メールアドレスでログイン</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.hidden_field :is_deleted, value: false %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com"%>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :入力情報を記憶する %>
      <% end %>

      <div class="field">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>