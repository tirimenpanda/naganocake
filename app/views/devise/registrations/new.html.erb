
<div class="container">
  <div class="row" text-align="center">
    <div class="col-xs-offset-1 col-xs-5">
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :last_name, 'ユーザーネーム（姓）' %><br>
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "（例）佐藤" %>
      </div>

      <div class="field">
        <%= f.label :last_name_kana, 'ユーザーネーム（カナ姓）' %><br>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "（例）サトウ" %>
      </div>

      <div class="field">
        <%= f.label :first_name, 'ユーザーネーム（名）' %><br>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "（例）太郎" %>
      </div>

      <div class="field">
        <%= f.label :first_name_kana, 'ユーザーネーム（カナ名）' %><br>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "（例）タロウ" %>
      </div>

      <div class="field">
        <%= f.label :postal_code, '郵便番号' %><em>（ハイフンは除く）</em><br>
        <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "your address number" %>
      </div>

      <div class="field">
        <%= f.label :address, '住所' %><br>
        <%= f.text_field :address, autocomplete: "address", placeholder: "your address" %>
      </div>

      <div class="field">
        <%= f.label :phone_number, '電話番号' %><em>（ハイフンは除く）</em><br>
        <%= f.telephone_field :phone_number, autocomplete: "phone_number", placeholder: "your phone number" %>
      </div>

      <div class="field">
        <%= f.label :email, '新規メールアドレス' %><br>
        <%= f.email_field :email, autocomplete: "email", placeholder: "example@email.com" %>
      </div>

      <div class="field">
        <%= f.label :password,'新規パスワード' %>
        <em>(6文字以上)</em><br>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "new password"  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'パスワード再入力' %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "your password"  %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

    <div class="col-xs-6">
      <% if resource.errors.any? then %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <% end %>
    </div>
  </div>
</div>
