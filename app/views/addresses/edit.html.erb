
<div class="container">
  <div class="row">
    <div class="page_title">
      <h3>配送先編集</h3>
    </div>
    <table class="table">
      <%= form_for( @address, url: address_path ) do | address | %>
      <tr>
        <th>郵便番号</th>
        <td><%= address.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= address.text_field :ship_to %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= address.text_field :consignee %></td>
      </tr>
      <%= address.submit '編集する', class:"btn-wrapper" %>
      <% end %>
    </table>
  </div>
</div>
