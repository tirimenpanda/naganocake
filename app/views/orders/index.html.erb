<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do | order | %>
  <tr>
    <!--注文日-->
    <td><%= date_format( order.created_at ) %></td>
    <!--配送先-->
    <td>
      <%= postal_code_format( order.postal_code ) %><br>
      <%= order.ship_to %><br>
      <%= order.consignee %>
    </td>
    <!--注文商品-->
    <td>
      <% order.order_details.each do | order_detail | %>
      <%= order_detail.items.name %><br>
      <% end %>
    </td>
    <!--支払金額-->
    <td><%= number_separation( order.total_price ) %></td>
    <!--ステータス-->
    <td><%= order.order_status %></td>
    <!--注文詳細-->
    <td><%= link_to '表示する', order_path( order ) %></td>
  </tr>
  <% end %>
</table>
